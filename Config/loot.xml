<configs>
    <!-- Define our custom groups first -->
    <append xpath="/lootcontainers">
        <lootgroup name="hgDR_rations">
            <item name="resourcePowderedMilk" count="1,2" loot_prob_template="med"/>
            <item name="resourcePowderedEggs" count="1,2" loot_prob_template="med"/>
            <item name="resourcePowderedHoney" count="1,2" loot_prob_template="low"/>
            <item name="resourceFreezeDriedVegetableStew" count="1,2" loot_prob_template="med"/>
            <item name="resourceFreezeDriedBlueberries" count="1,2" loot_prob_template="med"/>
            <item name="resourceFreezeDriedPotato" count="1,2" loot_prob_template="med"/>
            <item name="resourceFreezeDriedMushrooms" count="1,2" loot_prob_template="med"/>
            <item name="resourceFreezeDriedYuccaFruit" count="1,2" loot_prob_template="med"/>
            <item name="resourceInstantCoffee" count="1" loot_prob_template="low"/>
            <item name="resourceFreezeDriedDicedMeat" count="1,2" loot_prob_template="low"/>
            <item name="resourceBoxOfRamen" count="1,2" loot_prob_template="high"/>
            <item name="resourceFreezeDriedPeas" count="1,2" loot_prob_template="med"/>
            <item name="resourceFreezeDriedPears" count="1,2" loot_prob_template="med"/>
            <item name="resourcePowderedCreamer" count="1,2" loot_prob_template="med"/>
        </lootgroup>

        <lootgroup name="hgDR_milk">
            <item name="drinkJarMilk" count="1" loot_prob_template="high"/>
            <item name="foodCanMilk" count="1" loot_prob_template="med"/>
            <item name="drinkJarCreamer" count="1" loot_prob_template="low"/>
        </lootgroup>

        <!-- Military/Survival focused ration group -->
        <lootgroup name="hgDR_militaryRations">
            <item name="resourceFreezeDriedDicedMeat" count="1,3" loot_prob_template="med"/>
            <item name="resourceFreezeDriedVegetableStew" count="1,3" loot_prob_template="high"/>
            <item name="resourceFreezeDriedPotato" count="1,3" loot_prob_template="high"/>
            <item name="resourceInstantCoffee" count="1,2" loot_prob_template="med"/>
        </lootgroup>
    </append>

    <!-- Add rations to relevant base game groups -->
    <append xpath="/lootcontainers/lootgroup[@name='cannedfood']">
        <item group="hgDR_rations"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsUncommon']">
        <item name="resourceFreezeDriedDicedMeat" count="1,3"/>
        <item name="resourceFreezeDriedVegetableStew" count="1,3"/>
        <item name="resourcePowderedMilk" count="1,3"/>
        <item name="resourcePowderedEggs" count="1,3"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupFoodTrash']">
        <item name="resourceFreezeDriedPotato" loot_prob_template="low"/>
    </append>

    <!-- Add milk products to drink groups -->
    <append xpath="/lootcontainers/lootgroup[@name='drinks']">
        <item group="hgDR_milk"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupRefrigerator02']">
        <item group="hgDR_milk"/>
    </append>

    <append xpath="/lootcontainers/lootgroup[@name='groupDrinksUncommon']">
        <item group="hgDR_milk"/>
    </append>

    <!-- Add to military/survival locations -->
    <append xpath="/lootcontainers/lootgroup[@name='groupArmyTruck01']">
        <item group="hgDR_militaryRations" loot_prob_template="high"/>
    </append>

    <!-- Add to POI-specific locations -->
    <append xpath="/lootcontainers/lootgroup[@name='groupCoffeeMaker01']">
        <item name="resourceInstantCoffee" count="1,2" loot_prob_template="med"/>
        <item name="drinkJarCreamer" count="1" loot_prob_template="low"/>
        <item name="resourcePowderedCreamer" count="1" loot_prob_template="med"/>
    </append>

    <!-- Add to kitchen/cooking locations -->
    <append xpath="/lootcontainers/lootgroup[@name='groupCookingTools']">
        <item name="resourcePowderedMilk" count="1,2" loot_prob_template="med"/>
        <item name="resourcePowderedEggs" count="1,2" loot_prob_template="med"/>
        <item name="resourcePowderedCreamer" count="1,2" loot_prob_template="med"/>
    </append>
</configs>