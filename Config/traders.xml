<hurgleburgler>

  <!-- Add items to existing food groups -->
  <append xpath="/traders/trader_item_groups/trader_item_group[@name='foodSupplies']">
    <item name="resourcePowderedEggs" count="1,3"/>
    <item name="resourceFreezeDriedDicedMeat" count="1,3"/>
    <item name="resourceFreezeDriedPotato" count="1,3"/>
  </append>

  <append xpath="/traders/trader_item_groups/trader_item_group[@name='cannedfood']">
    <item name="resourcePowderedEggs"/>
    <item name="resourceFreezeDriedVegetableStew"/>
    <item name="resourceFreezeDriedBlueberries"/>
    <item name="resourceFreezeDriedPotato"/>
    <item name="resourceFreezeDriedMushrooms"/>
    <item name="resourceFreezeDriedYuccaFruit"/>
    <item name="resourceFreezeDriedDicedMeat"/>
    <item name="resourceBoxOfRamen"/>
    <item name="resourceFreezeDriedPeas"/>
    <item name="resourceFreezeDriedPears"/>
  </append>

  <append xpath="/traders/trader_item_groups/trader_item_group[@name='rareMedicine']">
    <item name="resourcePowderedHoney"/>
  </append>

  <!-- Create specialized preserved food group -->
  <append xpath="/traders/trader_item_groups">
    <trader_item_group name="hgDR_preservedFood">
      <item name="resourceFreezeDriedDicedMeat" count="1,3"/>
      <item name="resourceFreezeDriedVegetableStew" count="1,3"/>
      <item name="resourceFreezeDriedBlueberries" count="1,3"/>
      <item name="resourceFreezeDriedPotato" count="1,3"/>
      <item name="resourceFreezeDriedMushrooms" count="1,3"/>
      <item name="resourceFreezeDriedYuccaFruit" count="1,3"/>
      <item name="resourceFreezeDriedPeas" count="1,3"/>
      <item name="resourceFreezeDriedPears" count="1,3"/>
      <item name="resourceBoxOfRamen" count="1,3"/>
      <item name="resourcePowderedEggs" count="1,3"/>
      <item name="resourcePowderedHoney" count="1,3"/>
    </trader_item_group>
  </append>

</hurgleburgler>
