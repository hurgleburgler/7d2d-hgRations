<hurgleburgler>
	<append xpath="/ui_display_info/item_display">

		<item_display_info display_type="hgDR_milkBase" display_group="groupConsumables">
			<display_entry name="dFoodAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="dFoodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="dWaterAmountAdd" title_key="statWaterAmount"/>
		</item_display_info>

		<item_display_info display_type="hgDR_rationBase" display_group="groupConsumables">
			<display_entry name="dFoodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="dFoodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="dWaterAmountAdd" title_key="statWaterAmount"/>
		</item_display_info>

		<item_display_info display_type="hgDR_instantCoffee" display_group="groupConsumables">
			<display_entry name="dWaterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name="dStaminaRegen" title_key="statStaminaRegen" display_type="Percent"/>
			<display_entry name="dDuration" title_key="statDuration" display_type="Time"/>
			<display_entry name="dDurationMax" title_key="statMaxDuration" display_type="Time"/>
		</item_display_info>

	</append>

</hurgleburgler>
