        <item name="resourcePowderedCreamer"/>
        <item name="resourcePowderedEggs"/>
        <item name="resourcePowderedHoney"/>
        <item name="resourceFreezeDriedVegetableStew"/>
        <item name="resourceFreezeDriedBlueberries"/>
        <item name="resourceFreezeDriedPotato"/>
        <item name="resourceFreezeDriedMushrooms"/>
        <item name="resourceFreezeDriedYuccaFruit"/>
        <item name="resourceInstantCoffee"/>
        <item name="resourceFreezeDriedDicedMeat"/>
        <item name="resourceBoxOfRamen"/>
        <item name="resourceFreezeDriedPeas"/>
        <item name="resourceFreezeDriedPears"/>
    </append>

    <!-- Create specialized preserved food group -->
    <append xpath="/traders/trader_item_groups">
        <trader_item_group name="hgDR_preservedFood">
            <item name="resourceFreezeDriedDicedMeat" count="10,40"/>
            <item name="resourceFreezeDriedVegetableStew" count="5,20"/>
            <item name="resourceFreezeDriedBlueberries" count="5,20"/>
            <item name="resourceFreezeDriedPotato" count="4,18"/>
            <item name="resourceFreezeDriedMushrooms" count="4,18"/>
            <item name="resourceFreezeDriedYuccaFruit" count="4,18"/>
            <item name="resourceFreezeDriedPeas" count="4,18"/>
            <item name="resourceFreezeDriedPears" count="4,18"/>
