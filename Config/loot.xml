<configs>

  <!-- Define our custom groups first -->
  <insertAfter xpath="/lootcontainers/lootgroup[@name='empty']">

    <lootgroup name="hgDR_rations">
      <item name="resourcePowderedEggs" count="1" loot_prob_template="med"/>
      <item name="resourcePowderedHoney" count="1" loot_prob_template="low"/>
      <item name="resourceFreezeDriedVegetableStew" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedBlueberries" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedPotato" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedMushrooms" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedYuccaFruit" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedDicedMeat" count="1" loot_prob_template="low"/>
      <item name="resourceBoxOfRamen" count="1" loot_prob_template="high"/>
      <item name="resourceFreezeDriedPeas" count="1" loot_prob_template="med"/>
      <item name="resourceFreezeDriedPears" count="1" loot_prob_template="med"/>
    </lootgroup>

    <!-- Military/Survival focused ration group -->
    <lootgroup name="hgDR_militaryRations">
      <item group="hgDR_rations" loot_prob_template="high"/>
    </lootgroup>
  </insertAfter>

  <!-- Add rations to relevant base game groups -->
  <append xpath="/lootcontainers/lootgroup[@name='cannedfood']">
    <item group="hgDR_rations"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsUncommon']">
    <item name="resourceFreezeDriedDicedMeat" count="1,3"/>
    <item name="resourceFreezeDriedVegetableStew" count="1,3"/>
    <item name="resourcePowderedEggs" count="1,3"/>
  </append>

  <append xpath="/lootcontainers/lootgroup[@name='groupFoodTrash']">
    <item name="resourceFreezeDriedPotato" loot_prob_template="low"/>
  </append>

  <!-- Add to military/survival locations -->
  <append xpath="/lootcontainers/lootgroup[@name='groupArmyTruck01']">
    <item group="hgDR_militaryRations" loot_prob_template="high"/>
  </append>

  <!-- Add to kitchen/cooking locations -->
  <append xpath="/lootcontainers/lootgroup[@name='groupCookingTools']">
    <item name="resourcePowderedEggs" count="1,2" loot_prob_template="med"/>
  </append>

  <!-- Add rare ingredients -->
  <append xpath="/lootcontainers/lootgroup[@name='groupIngredientsRare']">
    <item name="resourceFreezeDriedDicedMeat" count="1,3"/>
    <item name="resourceFreezeDriedVegetableStew" count="1,2"/>
    <item name="resourcePowderedEggs" count="2,4"/>
  </append>

  <!-- Add to food stores -->
  <append xpath="/lootcontainers/lootgroup[@name='groupShamwayShelves']">
    <item group="hgDR_rations" loot_prob_template="med"/>
  </append>

  <!-- Add honey to survival medical -->
  <append xpath="/lootcontainers/lootgroup[@name='survivalMedical']">
    <item name="resourcePowderedHoney" loot_prob_template="low"/>
  </append>

</configs>